Screen:
    NavigationLayout:
        ScreenManager:
            id: screen_manager

            Screen:
                name: "main"
                BoxLayout:
                    orientation: 'vertical'

                    MDToolbar:
                        title: "Zoe"
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                        elevation: 8

                    MDLabel:
                        id: txtCiudad
                        text: "Bienvenido"
                        halign: 'center'

                    MDFloatingActionButton:
                        icon: 'microphone'
                        pos_hint: {'center_x': .5}
                        md_bg_color: app.theme_cls.primary_color
                        on_release: app.wake_up()

            Screen:
                name: "screen_settings"
                BoxLayout:
                    orientation: 'vertical'

                    MDToolbar:
                        title: "Settings"
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                        elevation: 8

                    FloatLayout:

                        MDIcon:
                            icon: 'weather-night'
                            pos_hint: {"x": .25, "top": .9}
                            size_hint: (.1, .1)

                        MDLabel:
                            text: "Night mode"
                            pos_hint: {"x": .35, "top": .9}
                            size_hint: (1, .1)

                        MDSwitch:
                            id: mode
                            pos_hint: {"x": .65, "top": .9}
                            size_hint: (.1, .1)
                            on_active: app.night_mode(*args)

        MDNavigationDrawer:
            id: nav_drawer
            BoxLayout:
                orientation: 'vertical'
                spacing: '8dp'
                padding: '8dp'

                MDLabel:
                    text: "Menu"
                    font_style: 'Subtitle1'
                    size_hint_y: None
                    height: self.texture_size[1]
                    halign: 'center'

                ScrollView:
                    MDList:
                        OneLineIconListItem:
                            text: "Main"
                            on_release:
                                screen_manager.current = "main"
                            IconLeftWidget:
                                icon: 'home'
                        OneLineIconListItem:
                            text: "Settings"
                            on_release:
                                screen_manager.current = "screen_settings"
                            IconLeftWidget:
                                icon: 'cogs'